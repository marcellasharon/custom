<odoo>
    <record id="wiz_kelas_view_form" model="ir.ui.view">
        <field name="name">wiz.kelas.view.form</field>
        <field name="model">wiz.restoran.kelas</field>
        <field name="arch" type="xml">
            <form string="Kelas Form">
                <sheet>
                    <group>
                        <group>
                            <field name="kelas_id"/>
                            <field name="customer_id"/>
                            <field name="tanggal"/>
                            <field name="jam"/>
                        </group>
                        <group>
                            <field name="total_qty"/>
                            <field name="total_harga"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detail" name="restoran_kelas">
                            <field name="line_ids">
                                <tree create="0" delete="0" editable="bottom">
                                    <field name="bukumenu_id" readonly="1"/>
                                    <field name="ref_kelas_lines_id" invisible="1"/>
                                    <field name="harga_id"/>
                                    <field name="qty"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                 <footer>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" data-hotkey="c"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                 </footer>
            </form>
        </field>
    </record>
</odoo>